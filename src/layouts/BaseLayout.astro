---
import '../styles/normalize.css';
import '../styles/global.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { pageTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="noindex, nofollow">
    <meta name="description" content="This website is an external expression of a part of my brain.">
    <meta property="og:url" content="https://cazuho.github.io/">
    <meta property="og:title" content="Self-Reference">
    <meta property="og:description" content="This website is an external expression of a part of my brain.">
    <!-- <meta property="og:image" content="https://cazuho.github.io/images/ogp.png"> -->
    <meta property="og:type" content="website">
    <meta property="og:locale" content="ja_JP">
    <meta property="og:site_name" content="Self-Reference">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@amadaimonion">
    <link rel="canonical" href="https://cazuho.github.io/">
    <!--  <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon-180x180.png"> -->
    
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} >
    <title>{pageTitle}</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Piazzolla:opsz,wght@8..30,400;8..30,700&display=swap">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/36f9edd7e6.js" crossorigin="anonymous"></script>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
	<Header />
  <main class="main">
    <slot />
  </main>
	<Footer />
  </body>
</html>