---
const { pubDate, url, title, description, tags} = Astro.props;
---

<li>
    <article>
        <time datetime={pubDate.slice(0, 10)}>{pubDate.slice(0, 10)}</time>
        <h2><a href={url}>{title}</a></h2>
        <p>{description}</p>
        <div class="tags">
            {tags.map((tag) => (
                <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
            ))}
        </div>
    </article>
</li>
<style>
    a {
        color: #00539F;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>